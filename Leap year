#include <iostream>

int main() {
while (true) {
  int year;
  bool leap = false;

  std::cout<<"Enter a year: ";
  std::cin >> year;
  

  
  if (year >= 1000 and year <=9999){
    if (year % 4 == 0){
      if ((year % 100 == 0) && (year % 400 == 0)){
        leap = true;
      } // d 100 %% d 400
    
      } // d by 4
    } // four digets

  
  else{
    std::cout<<"ERROR: Enter new year\n";
  }

if (leap == true){
  std::cout<<"Leap Year\n";
}
else if (leap == false){
  std::cout<<"Not a Leap Year\n";
}
}
}
